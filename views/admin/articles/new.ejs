<%-include('../../partials/header.ejs')%>


<body>
    <%- include('../../partials/navbar.ejs') %>
    
   <div class="container">
    <br>
    <div class="card">

        
        <div class="card-header">
            <h2>Article register</h2>
        </div>


        <div class="card-body">
            <br>
               <form action="/articles/save" method="POST">
                   <input class="form-control" type="text" name="title" placeholder="Article title">
                   <br>
                   <textarea name="articleBody" class="form-control" placeholder="Write your article here" id="articleTiny"></textarea>
                   <br>
                   <label>Category:</label>
                   <select name="category" class="form-control">
                    <% categories.forEach((category)=>{%>
                        <option value="<%=category.id%>"><%=category.title%></option>
                    <%})%>
                   </select>
                   <br>
                   <button class=" btn btn-primary">Register article</button>
               </form>
        </div>
    </div>


   </div>

</body>

 <%- include('../../partials/footer.ejs') %>

