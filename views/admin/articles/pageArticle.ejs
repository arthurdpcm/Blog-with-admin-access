<%-include('../../partials/header.ejs')%>


<body>
   <%-include('../../partials/homenavbar.ejs')%>
   
   <div class="container">
      <% result.articles.rows.forEach(article =>{%>
         <br>
        <div class="card">
           
           <div class="card-header">
               <h4><%=article.title%></h4>
           </div>

           <div class="card-body">
               <a href="/article/<%= article.slug %>" class="btn btn-dark">Read article</a>

           </div>
        </div>
     <%})%>
    <br>
    <div class="row">
        <div class="col col-12">

            <% if(result.next){%>
                <a href="/articles/page/<%=result.page + 1%>" style="color: rgb(64, 64, 75); float: right;">Next > > ></a>

            <%}%>   

            <% if(result.page == 1){%>
                <a href="/" style="color: rgb(64, 64, 75); float: left;">< < < Home</a>
                <%}%>   

            <% if(result.page < result.page + 1 && result.page > 1){%>
                <a href="/articles/page/<%=result.page -1%>" style="color: rgb(64, 64, 75); float: left;">< < < Previous</a>
            <%}%>   
            <!-- <% if(result.page == 3){%>
                <a href="/articles/page/<%=result.page -1%>" style="color: rgb(64, 64, 75); float: left;">< < < Previous</a>
            <%}%>    -->
            
        </div>
     </div>

   </div>
<br>
</body>


 <%- include('../../partials/footer.ejs') %>